
<h1><%= articles[0].user.name %></h1>

<% for(let article of articles){ %>
    <article class="card mt-4">
        <div class="card-body">
            <p class="card-subtitle mb-2"><span class="text-muted"><%= article.createdAt.toLocaleString('en-US', {day: 'numeric', month: 'short', year: 'numeric'}) %></span></p>
            <div>
                <a href="/articles/<%= article.slug %>" class="link">
                    <h2 class="title h3"><%= article.title %></h2>
                    <p class="card-text"><%= article.description %></p>
                </a>
            </div>
        </div>
    </article>
<% } %>
